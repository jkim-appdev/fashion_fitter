<div>
  <div>
  <h3>Saved clothes</h3>
    <table>
      <tr>
        <%# <th>
          ID
        </th> %>

        <th>
          Brand
        </th>
        
        <th>
          Price
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
          Details
        </th>
      </tr>

      <% @list_of_outfits.each do |an_outfit| %>
      <tr>
        <%# <td>
          <%= an_outfit.id %>
        <%# </td>  %>
        
        <td>
          if @the_outfit.top_id != nil
            p "top it off"
          elsif @the_outfit.bottom_id != nil
            p "bottoms up!"
          else
            p "a shoe-in"
          end
        </td>

        <td>
          <%= time_ago_in_words(an_outfit.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_outfit.updated_at) %> ago
        </td>

        <td>
          <a href="/outfits/<%= an_outfit.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  <hr>
  </div>
</div>


